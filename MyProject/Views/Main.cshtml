@using Microsoft.Extensions.Options
@using MyProject.Models
@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@using Umbraco.Cms.Core.Models.PublishedContent;
@inject IOptions<GooglereCaptchaSettings> _googleCaptchaSettings;

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Stage Project</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="assets/favicon.icon" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="/css/customStyle.css" rel="stylesheet" />
    <link href="/css/styles.css" rel="stylesheet" />
    <script defer src="~/js/myScript.js" type="text/javascript"></script>

</head>
<body class="d-flex flex-column h-100">


    <main class="flex-shrink-0">
        <!-- Navigation-->
        @await Component.InvokeAsync("Navigation")

        @RenderBody()

    </main>
    <!-- Footer-->
    @await Html.PartialAsync("Footer")
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Core theme JS-->
    <script src="https://www.google.com/recaptcha/api.js?render=@_googleCaptchaSettings.Value.SiteKey" async>
    </script>
    <script type="text/javascript">
        function onClick(e) {
            e.preventDefault();
            grecaptcha.ready(function () {
                grecaptcha.execute('@_googleCaptchaSettings.Value.SiteKey', { action: 'submit' }).then(function (token) {
                    $('#token').val(token)
                    document.getElementById("Token") = token
                });
            });
        }




    </script>

</body>
</html>
