@using MyProject.Models.ViewModels;
@using MyProject.Models;
@inherits UmbracoViewPage<SearchViewModel>
@model SearchViewModel

@using (Html.BeginUmbracoForm("SubmitForm", "SearchSurface", FormMethod.Post))
{
    <div class="container">
        <div class="row">
            <div class="form-group col-md-6">
                @Html.LabelFor(m => m.Query)
                <div class="input-group">
                    @Html.TextBoxFor(m => m.Query, new { @class = "form-control", placeholder = "Search..."})
                    @*@Html.ValidationMessageFor(m => m.Query)*@
                </div>
                
            </div>
            <div class="form-group col-md-6">
                @Html.LabelFor(m => m.Category)
                <div class="input-group">
                    @Html.DropDownListFor(m => m.Category, Model.Categories, "All")
                </div>

            </div>
            <div class="form-group col-md-6">
                <button id="Submit" class="btn btn-primary btn-block mt-4">Search</button>
            </div>
        </div>
    </div>
}
@if (Model.Query != null)
{
    <div>
        <p class="text-danger">@Html.ValidationSummary()</p>
    </div>
}

